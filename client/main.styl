/* GLOBAL IMPORTS */

@import 'nib'


/* VARIABLES */

font = "Roboto", sans-serif

color1 = #00c853

grey = #ddd

limboblue = #0aa5af

/* RESETS */

html, html *
  font-family font
  margin 0
  padding 0

h1
  font-size 36px
h2
  font-size 28px
h3
  font-size 24px
h4
  font-size 20px
h5
  font-size 16px
p
  font-size 14px

.animated
  animation-duration 500ms

