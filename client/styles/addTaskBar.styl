.add-task-bar
  background-color #ededed !important
  box-shadow 0 0 10px rgba(0,0,0,0.5)
  height 60px !important
  border 0
  border-top-width 0px !important
  background-image none !important
  z-index 999

  &.without-shadow
    box-shadow none !important

  form
    padding 0
    margin auto 0

    input
      border 0
      outline none
      margin auto 20px
      display block
      width 100%
      font-size 20px
      line-height 24px
      padding-right 35px
      background-color transparent !important

      @media (max-width: 600px)
        font-size 18px
        line-height 20px

  .toggle-menu
    position absolute
    top 50%
    right 20px
    transform translateY(-50%) rotate(180deg)
    font-size 24px
    color #0aa5af

    &:hover
      cursor pointer

  .fa-plus
    display none
    position absolute
    top 50%
    right 20px
    transform translateY(-50%)
    font-size 20px
    color #fff
    border 0
    background-color #aaa
    width 40px
    height 40px
    border-radius 40px
    line-height 40px
    text-align center
