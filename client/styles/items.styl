.flex-wrapper
  display flex
  display -webkit-flex
  flex-flow column nowrap
  justify-content flex-end

  .items-list
    width 100%
    max-width 900px
    margin 40px auto
    overflow visible
    display flex
    display -webkit-flex
    flex-flow column-reverse nowrap

    @media (max-width: 600px)
      margin 0
      padding 5px

    .list-item
      background-color #fff
      padding 20px
      // border-bottom 1px solid #ddd
      border-radius 2px
      border 0
      display flex
      display -webkit-flex
      flex-flow row nowrap
      justify-content flex-start
      margin 2px 0
      box-shadow 0px 1px 2px rgba(0,0,0,0.2)

      .item-details
        right 10px
        top 50%
        transform translateY(-50%)

      &.done-item
        .sub-item
          color #ccc
        .item-text
          text-decoration line-through
          color #ccc

      &:hover .item-actions
        opacity 1
        transition 200ms ease-out

      .sub-item
        color #ddd
        font-size 20px
        line-height 20px
        margin auto 0
        margin-left 2px
        margin-right 18px

        &:hover
          cursor pointer

      .item-text
        font-size 18px
        font-weight 400
        border 0
        outline none
        padding 0
        padding-right 40px
        white-space pre-wrap
        margin auto 0
        width 100%

        @media (max-width: 600px)
          font-size 16px

        &.not-done:hover
          cursor pointer

      .edit-item-text
        display none
        font-size 18px
        font-weight 400
        border 0
        outline none
        padding 0
        padding-right 40px
        margin auto 0
        width 100%
        white-space pre-wrap
        -webkit-user-select text
        user-select text

        @media (max-width: 600px)
          font-size 16px

      .item-actions
        list-style none
        display flex
        display -webkit-flex
        flex-flow row nowrap
        margin 0
        margin-left auto
        opacity 0.2
        transition 200ms ease-out

        @media (max-width: 600px)
          display none

        li
          opacity 0.6
          transition 200ms ease-out
          margin auto 5px
          border none
          border 1px solid #ddd
          border-radius 40px
          width 40px
          height 40px
          display flex
          display -webkit-flex
          justify-content center
          flex-flow column nowrap

          &:hover
            opacity 1
            transition 200ms ease-out
            cursor pointer

          i
            font-size 16px
            line-height 16px
            display block
            text-align center

            &.fa-check
              color #1bb23a

            &.fa-tag
              color #0aa5af

            &.fa-close
              color red
