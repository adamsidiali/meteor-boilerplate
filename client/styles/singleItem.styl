.flex-wrapper

  .single-item
    width 100%
    max-width 900px
    margin 40px auto
    overflow visible
    display flex
    display -webkit-flex
    flex-flow column-reverse nowrap
    background-color #fff
    padding 20px
    box-shadow 1px 2px 4px rgba(0,0,0,0.2)
    border-radius 2px

    @media (max-width: 600px)
      margin 0
      padding 5px

    h2
      margin 0
      padding 0
